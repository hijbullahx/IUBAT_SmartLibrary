{
  "version": 2,
  "builds": [
    {
      "src": "backend/library_automation/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/library_automation/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/backend/library_automation/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/backend/library_automation/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "DEBUG": "False"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url",
      "SECRET_KEY": "@secret_key",
      "DEBUG": "False"
    }
  }
}
